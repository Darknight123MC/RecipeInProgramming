{
  "schemaVersion": 1,
  "id": "rip",
  "version": "${version}",
  "name": "RecipeInProgramming",
  "description": "A Lib mod, Take the add Recipe(Data) function to fabric event, so you can use the event to register recipes, and make some JSON can't do contents(Infinity Recipes).",
  "authors": [
    "HO-Artisan"
  ],
  "contact": {
    "homepage": "https://github.com/HO-Artisan/RecipeInProgramming",
    "sources": "https://github.com/HO-Artisan/RecipeInProgramming"
  },
  "license": "AGPL v3.0",
  "icon": "assets/rip/icon.png",
  "accessWidener" : "rip.accesswidener",
  "environment": "*",
  "entrypoints": {
    "main": [
      "ho.artisan.lib.recipe.RIP"
    ]
  },
  "mixins": [
    "rip.mixins.json"
  ],
  "depends": {
    "fabricloader": "*",
    "fabric-api": "*",
    "minecraft": "1.18.x",
    "java": ">=16"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library"],
      "update_checker": false
    }
  },
  "breaks": {
    "quilt_loader": "*",
    "quilt_recipe": "*"
  }
}
